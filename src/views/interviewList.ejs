<h2 class="mt-4 mb-4">Interviews</h2>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Interview ID</th>
                <th>Company</th>
                <th>Date</th>
                <th>Students</th>
            </tr>
        </thead>
        <tbody>
            <% interviews.forEach(interview => { %>
            <tr>
                <td><%= interview._id %></td>
                <td><%= interview.interview_Company %></td>
                <td><%= interview.interview_Date %></td>
                <td>
                    <% interview.students.forEach(student => { %>
                    <%= student %><br>
                    <% }); %>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center align-items-center mt-4">
    <a href="/app/interviews/all?page=<%= currentPage - 1 %>"
        class="btn btn-primary m-3 <%= currentPage === 1 ? 'disabled' : '' %>">Previous</a>
    <a href="/app/interviews/all?page=<%= currentPage + 1 %>"
        class="btn btn-primary <%= currentPage === totalPages ? 'disabled' : '' %>">Next</a>
</div>
